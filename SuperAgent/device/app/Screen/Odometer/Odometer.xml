<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope" StyleSheet="Odometer.css">

<s:Push Id="odometerDoc" Value="$CreateOdometerDoc()"></s:Push>

	<c:SwipeHorizontalLayout Id="swipe_layout" Index="1">

		<s:Include File="\Components\SideMenu.xml"/>

		<c:DockLayout>

			<c:DockLayout CssClass="top_navigator">
				<c:DockLayout Id="btnMenu" CssClass="btn_menu" OnEvent="Back" OnClickAction="$OpenMenu($swipe_layout)">
					<c:Image CssClass="menuIcon" />
				</c:DockLayout>
				<c:DockLayout CssClass="btn_space" />
				<c:HorizontalLayout>
					<c:TextView Id="title" Text="#Odometer#" />
				</c:HorizontalLayout>
			</c:DockLayout>
			<c:HorizontalLine/>
		
			<c:HorizontalLayout Id="btnSave" CssClass="bottom_btn" OnClickAction="$SaveNewDoc($odometerDoc)">
					<c:TextView Text="#save#"></c:TextView>
					<c:HorizontalLine CssClass="b_line" />
			</c:HorizontalLayout>

			<c:ScrollView>

				<c:VerticalLayout CssClass="blue">

					<c:DockLayout CssClass="short_panel">
						<c:DockLayout CssClass="grid" >
							<c:VerticalLayout>
								<c:TextView Text="#BegOfDay#" CssClass="description_row" />
								<c:EditText Id="ValueBegOfDay" Value="$odometerDoc.ValueBegOfTheDay" Placeholder="0" Enabled="True" Keyboard="numeric" CssClass="main_row" OnChange="$Modified(title)" OnLostFocus="$ValidateValue($odometerDoc)"/>
							</c:VerticalLayout>
						</c:DockLayout>
					</c:DockLayout>	

					<c:DockLayout CssClass="short_panel">
						<c:DockLayout CssClass="grid" >
							<c:VerticalLayout>
								<c:TextView Text="#EndOfDay#" CssClass="description_row" />
								<c:EditText Id="ValueEndOfDay" Value="$odometerDoc.ValueEndOfTheDay" Placeholder="0" Enabled="True" Keyboard="numeric" CssClass="main_row" OnChange="$Modified(title)" OnLostFocus="$ValidateValue($odometerDoc)"/>
							</c:VerticalLayout>
						</c:DockLayout>
					</c:DockLayout>			

				</c:VerticalLayout>

			</c:ScrollView>

		</c:DockLayout>	

	</c:SwipeHorizontalLayout>


</c:Screen>