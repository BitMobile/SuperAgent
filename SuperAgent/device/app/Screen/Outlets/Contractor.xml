<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="CreateOutlet.css">

	<s:Push Id="contractor" Value="$param1"></s:Push>
	<s:Push Id="single" Value="$param2"></s:Push>

	<c:DockLayout>

		<c:DockLayout CssClass="top_navigator">
			<c:DockLayout Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$DoBack()" >
				<c:Image />
					<c:TextView Text="@back" />
			</c:DockLayout>
			<c:DockLayout Id="btnForward" CssClass="btn_forward" />
			<c:HorizontalLayout>
				<c:TextView Text="#history#" />
			</c:HorizontalLayout>
		</c:DockLayout>

		<c:HorizontalLine />

		<c:ScrollView Id="grScrollView">

			<c:HorizontalLayout CssClass="margin_top" />
			<c:HorizontalLine />
			<s:Push Id="resLast" Value="$GetLastVisit()"></s:Push>
			<s:Iterator Id="LastVisit" Value="$resLast">
				<c:HorizontalLayout CssClass="grid" OnClick="$GoToHisVis($LastVisit.Id)">
					<c:VerticalLayout>
						<c:TextView Text="#description#" CssClass="description_row"></c:TextView>
						<c:TextView Text="$LastVisit.EndTime" CssClass="main_row"/>
					</c:VerticalLayout>
				</c:HorizontalLayout>
			<c:HorizontalLine />
		</s:Iterator>

			<c:HorizontalLayout CssClass="end_of_block" />

		</c:ScrollView>

	</c:DockLayout>

</c:Screen>
