<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" xmlns:d="DefaultScope" StyleSheet="Outlet.css">

	<s:If Test="$workflow.name=='Visit'">
		<s:Push Id="workflow.visit" Value="$CreateVisitIfNotExists($common.UserRef, $workflow.visit, $planVisit)" />
	</s:If>

	<s:Push Id="outletObj" Value="$LoadObject($workflow.outlet)" />
	<s:If Test="$workflow.name=='Visit'">
		<s:Push Id="Merop" Value="$workflow.visit.FactMerop" />
	</s:If>
	<s:Push Id="outletScreen" Value="true"></s:Push><!-- dirty hack, see Events.js OnApplicationRestore() -->

	<c:DockLayout Id="vOutlet">

		<s:If Test="$CreateVisitEnable()">
			<c:HorizontalLayout Id="btnDetails" CssClass="bottom_btn">
				<c:VerticalLayout OnClickAction="$ShowContractorsIfExists($workflow.outlet)">
					<c:TextView Text="#history#" CssClass="left_tv"></c:TextView>
				</c:VerticalLayout>
				<c:VerticalLayout Id="btnContacts" OnClickAction="$DoAction(ShowContacts, $workflow.outlet, in)">
					<c:TextView Text="#contacts#" CssClass="right_tv"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
		</s:If>
		<s:Else>
			<c:HorizontalLayout Id="btnDetails" CssClass="bottom_btn">
				<c:VerticalLayout OnClickAction="$ShowContractorsIfExists($workflow.outlet)">
					<c:TextView Text="#history#" CssClass="left_tv"></c:TextView>
				</c:VerticalLayout>
				<c:VerticalLayout Id="btnContacts" OnClickAction="$DoAction(ShowContacts, $workflow.outlet, in)">
					<c:TextView Text="#contacts#" CssClass="right_tv"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
		</s:Else>
		<c:HorizontalLine CssClass="b_line" />

		<s:If Test="$workflow.name!='Visit'">
			<c:DockLayout CssClass="top_navigator">
				<c:HorizontalLayout Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$SaveAndBack($workflow.outlet)">
					<c:Image />
					<c:TextView Text="#list#" />
				</c:HorizontalLayout>
				<c:HorizontalLayout CssClass="btn_forward" />
				<c:HorizontalLayout>
					<c:TextView Text="ДО" />
				</c:HorizontalLayout>
			</c:DockLayout>
			<c:HorizontalLine />
		</s:If>
		<s:Else>
			<c:DockLayout CssClass="top_navigator">
				<c:DockLayout Id="btnBack" CssClass="btn_back" OnEvent="Back" OnClickAction="$DoRollbackAction($workflow.visit)">
					<c:Image />
					<c:TextView Text="@backvisit" />
				</c:DockLayout>
				<s:If Test="@DateAddTru">
					<c:HorizontalLayout CssClass="btn_forward" />
				</s:If>
				<s:Else>
					<c:DockLayout OnEvent="Forward" CssClass="btn_forward" OnClickAction="$CheckNotNullAndForward($workflow.outlet, $workflow.visit)">
						<c:TextView Id="btnForward" Text="#forward#" />
					</c:DockLayout>
				</s:Else>
				<c:HorizontalLayout>
					<c:TextView Text="#client#" />
				</c:HorizontalLayout>
			</c:DockLayout>

			<c:Image CssClass="1_scroll"></c:Image>
			<c:HorizontalLine />
		</s:Else>

		<c:ScrollView Id="grScrollView">

			<c:HorizontalLayout CssClass="caption_grid">
				<c:TextView Text="#main#:"></c:TextView>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<s:Push Id="snapshots" Value="$GetSnapshots($workflow.outlet)" />


			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#descriptionFULL#" CssClass="description_row"></c:TextView>
					<c:TextView Id="outletDescr" Text="$workflow.outlet.LegalName" CssClass="not_available_basic"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout>
					<c:TextView Text="#descriptionShort#" CssClass="description_row"></c:TextView>
					<c:TextView Id="outletDescrShort" Text="$workflow.outlet.Description" CssClass="not_available_basic"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />
			<s:If Test="$workflow.name=='Visit'">
				<c:HorizontalLayout CssClass="grid">
					<s:If Test="$planVisit==null || @DateAddTru">
						<c:VerticalLayout>
							<c:TextView Text="#PlanDate#" CssClass="description_row"></c:TextView>
							<c:TextView Id="PlanDate" Text="$filterDate($DatePlanVisit)" CssClass="not_available_basic"></c:TextView>
						</c:VerticalLayout>
					</s:If>
					<s:Else>
						<c:VerticalLayout OnClickAction="$SetDateplan($DatePlanVisit)">
							<c:TextView Text="#PlanDate#" CssClass="description_row"></c:TextView>
							<c:TextView Id="PlanDate" Text="$filterDate($DatePlanVisit)" CssClass="main_row_available"></c:TextView>
						</c:VerticalLayout>
					</s:Else>
				</c:HorizontalLayout>
				<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<s:If Test="$planVisit==null">
					<c:VerticalLayout>
						<c:TextView Text="#Goal#" CssClass="description_row"></c:TextView>
						<c:EditText Id="Goal" CssClass="main_row" Text="$Merop.Description" Placeholder="—" OnLostFocus="$SetGoalToMerop($Merop)"></c:EditText>
					</c:VerticalLayout>
				</s:If>
				<s:Else>
					<c:VerticalLayout>
						<c:TextView Text="#Goal#" CssClass="description_row"></c:TextView>
						<c:TextView Id="Goal" Text="$Merop.Description" CssClass="not_available_basic"></c:TextView>
					</c:VerticalLayout>
				</s:Else>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid1" OnClickAction="$ShowBool($Merop)">
				<c:VerticalLayout CssClass="VLCheck">
					<c:CheckBox Id="ChkBox" CssClass="ForChecbox" Enabled="false"/>
				</c:VerticalLayout>
				<c:VerticalLayout CssClass="VLCheckName">
					<c:TextView Text="Совместно с руководителем"/>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout OnClickAction="$ChoseFromCatalog(TypeMer)">
					<c:TextView Text="#TypeMer#" CssClass="description_row"></c:TextView>
					<s:If Test="$ValueEmpty(TypeMer)">
						<c:TextView Id="TypeMer" Text="—" CssClass="main_row_available"></c:TextView>
					</s:If>
					<s:Else>
						<c:TextView Id="TypeMer" Text="$Merop.TypeMeropr.Description" CssClass="main_row_available"></c:TextView>
					</s:Else>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout OnClickAction="$DoAction(ShowContacts, $workflow.outlet, out)">
					<c:TextView Text="#contactName#" CssClass="description_row"></c:TextView>
					<s:If Test="$ValueEmpty(contactName)">
						<c:TextView Id="contactName" Text="—" CssClass="main_row_available"></c:TextView>
					</s:If>
					<s:Else>
						<c:TextView Id="contactName" Text="$Merop.ContactPerson.Description" CssClass="main_row_available"></c:TextView>
					</s:Else>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout OnClickAction="$ChoseFromCatalog(MaybeDeal)">
					<c:TextView Text="#MaybeDeal#" CssClass="description_row"></c:TextView>
					<s:If Test="$ValueEmpty(MaybeDeal)">
						<c:TextView Id="MaybeDeal" Text="—" CssClass="main_row_available"></c:TextView>
					</s:If>
					<s:Else>
						<c:TextView Id="MaybeDeal" Text="$Merop.MayBeDeal.Description" CssClass="main_row_available"></c:TextView>
					</s:Else>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid" OnClickAction="$ShowGoalContains()">
				<c:VerticalLayout>
					<c:TextView Text="#GoalContains#" CssClass="description_row"></c:TextView>
					<s:If Test="$ValueEmpty(GoalContains)">
						<c:TextView Id="GoalContains" Text="—" CssClass="main_row_available"></c:TextView>
					</s:If>
					<s:Else>
						<c:TextView Id="GoalContains" Text="$Merop.GoalContains" CssClass="main_row_available"></c:TextView>
					</s:Else>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />
		</s:If>
		<s:Else>

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout OnClickAction="$ChoseFromCatalog(Segment)">
					<c:TextView Text="#Segment#" CssClass="description_row"></c:TextView>
					<c:TextView Id="Segment" Text="$outletObj.Segment.Description" CssClass="main_row_available"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout OnClickAction="$ChoseFromCatalog(TypeOrg)">
					<c:TextView Text="#TypeOrg#" CssClass="description_row"></c:TextView>
					<c:TextView Id="TypeOrg" Text="$outletObj.OrgType.Description" CssClass="main_row_available"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

			<c:HorizontalLayout CssClass="grid">
				<c:VerticalLayout OnClickAction="$ChoseFromCatalog(Profile)">
					<c:TextView Text="#Profile#" CssClass="description_row"></c:TextView>
					<c:TextView Id="Profile" Text="$outletObj.Profile.Description" CssClass="main_row_available"></c:TextView>
				</c:VerticalLayout>
			</c:HorizontalLayout>
			<c:HorizontalLine />

		</s:Else>

		</c:ScrollView>

	</c:DockLayout>

</c:Screen>
