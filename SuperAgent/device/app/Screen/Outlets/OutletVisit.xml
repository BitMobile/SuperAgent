<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Outlet.css">

	<s:Push Id="outlet" Value="$param1"></s:Push>

	<c:DockLayout>

		<c:DockLayout CssClass="top_navigator">
			<c:HorizontalLayout>
				<c:TextView Text="#История визитов#" />
			</c:HorizontalLayout>
		</c:DockLayout>

		<c:HorizontalLine />

		<c:HorizontalLayout Id="btnCancel" CssClass="bottom_btn">
			<c:VerticalLayout OnEvent="Back" OnClickAction="$DoBack()">
				<c:TextView Text="#back#" CssClass="left_tv"></c:TextView>
			</c:VerticalLayout>
			<!-- <c:VerticalLayout Id="btnAdd" OnEvent="Forward" OnClickAction="$CreatePlan($outlet, null, null)">
				<c:TextView Text="#add#" CssClass="right_tv"></c:TextView>
			</c:VerticalLayout> -->
		</c:HorizontalLayout>
		<c:HorizontalLine CssClass="b_line" />

		<c:ScrollView Id="grScrollView">

			<c:HorizontalLayout CssClass="margin_top5" />
			<c:HorizontalLine />

			<s:Iterator Id="plan" Value="$GetPlans($outlet)" Status="statusCount">

				<c:HorizontalLayout CssClass="grid5">
							<c:VerticalLayout>
			<!--		<c:TextView Text="$plan.Outlet.Description" CssClass="description_row"></c:TextView>-->
					<c:TextView Text="$FormatDate($plan.Date)" CssClass="description_row5"></c:TextView>
					<c:TextView Text="$plan.Commentary" CssClass="not_available_basic5"></c:TextView>


					<s:Iterator Id="skuss" Value="$GetSKUS($plan.Id)" >

							<c:TextView Text="#sku# {$skuss.SKU.Description} " CssClass="not_available_basic5"></c:TextView>
								<c:TextView Text="#quantity# {$skuss.Qty}" CssClass="not_available_basic5"></c:TextView>

					</s:Iterator>

							</c:VerticalLayout>
				</c:HorizontalLayout>


				<c:HorizontalLine />

			</s:Iterator>

		</c:ScrollView>

	</c:DockLayout>

</c:Screen>
